{
  "name": "neomono",
  "displayName": "Neomono",
  "description": "A vibrant, futuristic dark theme with neon accents for modern developers.",
  "version": "0.0.7",
  "publisher": "Monosen",
  "icon": "assets/neomono-icon.jpg",
  "galleryBanner": {
    "color": "#bd93f9",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Monosen/Neomono.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Themes"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Neomono",
        "uiTheme": "vs-dark",
        "path": "./themes/Neomono-color-theme.json"
      }
    ],
    "commands": [
      {
        "command": "neomono.enableNeonDreams",
        "title": "Neomono: Enable Neon Dreams"
      },
      {
        "command": "neomono.disableNeonDreams",
        "title": "Neomono: Disable Neon Dreams"
      }
    ]
  },
  "scripts": {
    "badges:vscode": "node scripts/switch-badges.js vscode",
    "badges:ovsx": "node scripts/switch-badges.js ovsx"
  }
}
